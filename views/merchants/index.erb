  <input type="text" id="name" name="name" placeholder="Name?" required>

  <label for="type">What was this for?</label>
  <input type="text" id="type" name="type" placeholder="Shopping? Bill?" required>

  <input class="enter" type="submit" value="Add Retailer">
</form>
